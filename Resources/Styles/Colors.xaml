<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base color adjustments -->
    <Color x:Key="Background">#F9F9F9</Color>
    <!-- Fundo Branco -->
    <Color x:Key="ButtonGreen">#4CAF50</Color>
    <!-- Verde Grama (para botões) -->
    <Color x:Key="ButtonGreenDark">#388E3C</Color>
    <!-- Verde Grama escuro (para botões pressionados) -->

    <!-- Primary and Secondary tones harmonized -->
    <Color x:Key="Primary">#2C6E49</Color>
    <!-- Verde suave para o tom primário -->
    <Color x:Key="PrimaryDark">#1B4D36</Color>
    <!-- Verde mais escuro para o tom primário escuro -->
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <!-- Cor do texto escuro no fundo claro -->
    <Color x:Key="Secondary">#A1DAB5</Color>
    <!-- Secundária mais suave, tom claro de verde -->
    <Color x:Key="SecondaryDarkText">#6A9A79</Color>
    <!-- Secundária escura, tom mais opaco -->

    <Color x:Key="Tertiary">#0F4D2E</Color>
    <!-- Tertíaria: verde profundo, mais forte -->

    <Color x:Key="White">White</Color>
    <!-- Branco -->
    <Color x:Key="Black">Black</Color>
    <!-- Preto -->
    <Color x:Key="Magenta">#D600AA</Color>
    <!-- Magenta -->
    <Color x:Key="MidnightBlue">#190649</Color>
    <!-- Azul escuro -->
    <Color x:Key="OffBlack">#1f1f1f</Color>
    <!-- Preto suave -->

    <!-- Gray tones unchanged -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <!-- Cinza claro -->
    <Color x:Key="Gray200">#C8C8C8</Color>
    <!-- Cinza médio claro -->
    <Color x:Key="Gray300">#ACACAC</Color>
    <!-- Cinza médio -->
    <Color x:Key="Gray400">#919191</Color>
    <!-- Cinza escuro claro -->
    <Color x:Key="Gray500">#6E6E6E</Color>
    <!-- Cinza escuro -->
    <Color x:Key="Gray600">#404040</Color>
    <!-- Cinza mais escuro -->
    <Color x:Key="Gray900">#212121</Color>
    <!-- Cinza muito escuro -->
    <Color x:Key="Gray950">#141414</Color>
    <!-- Cinza quase preto -->

    <!-- Solid Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Button specific colors -->
    <SolidColorBrush x:Key="ButtonGreenBrush" Color="{StaticResource ButtonGreen}"/>
    <SolidColorBrush x:Key="ButtonGreenDarkBrush" Color="{StaticResource ButtonGreenDark}"/>

    <Color x:Key="FlyoutBackgroundColor">DarkSlateBlue</Color>
    <Color x:Key="FlyoutTextColor">White</Color>
    <Color x:Key="FlyoutSelectedItemColor">LightGoldenrodYellow</Color>
    
</ResourceDictionary>
