<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:CAMAUIGardenCentreApp.Models"
             xmlns:vm="clr-namespace:CAMAUIGardenCentreApp.ViewModels"
             x:DataType="vm:BasketViewModel"
             x:Class="CAMAUIGardenCentreApp.Views.BasketPage"
             Title="Shopping Cart">

    <Grid Padding="10">
        <CollectionView ItemsSource="{Binding CartItems}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:CartItem">
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding Product.Name}"
                               FontAttributes="Bold"
                               FontSize="16"/>

                        <Label Text="{Binding Product.Price, StringFormat='Price: {0:C}'}"
                               FontSize="14"
                               TextColor="Gray"/>

                        <HorizontalStackLayout Spacing="10"
                                               VerticalOptions="Center">
                            <Button Text="-"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BasketViewModel}}, Path=DecreaseQuantityCommand}"
                                    CommandParameter="{Binding Product}"/>

                            <Label Text="{Binding Quantity}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   WidthRequest="40"/>

                            <Button Text="+"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BasketViewModel}}, Path=IncreaseQuantityCommand}"
                                    CommandParameter="{Binding Product}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Total Section -->
        <VerticalStackLayout VerticalOptions="End" Padding="10">
            <BoxView HeightRequest="2" BackgroundColor="Black"/>
            <HorizontalStackLayout Spacing="10"
                       VerticalOptions="Center">
                <Label Text="{Binding TotalPrice, StringFormat='Total: {0:C}'}"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       Padding="10"/>
                <Button Text="Checkout"
                         Command="{Binding GoToCheckoutCommand}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
